generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma" // ← Esta línea es el problema
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String?
  email     String   @unique
  phone     String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  productUsers ProductUser[]
  role         Role          @default(USER)
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Float
  stock       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  productUsers ProductUser[]
}

model ProductUser {
  id        Int      @id @default(autoincrement())
  idUser    Int
  idProduct Int
  quantity  Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User    @relation(fields: [idUser], references: [id])
  product Product @relation(fields: [idProduct], references: [id])

  @@unique([idUser, idProduct])
}

enum organizationRole {
  MANAGER
  REGULAR
}

enum Role {
  USER
  ADMIN
}
